<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style ="@style/SCREEN"
    tools:context=".Fragment.User.CanhanFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@color/maincolor">

        <ImageView
            android:layout_marginTop="37dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_user"/>

        <TextView
            android:id="@+id/txt_DangNhap"
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:text="Đăng nhập"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="OnClick" />

        <Switch
            android:id="@+id/switcher"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_saveNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/maincolor"
        android:drawableLeft="@drawable/ic_action_save"
        android:elevation="2dp"
        android:text="Tin đã lưu"
        android:textAlignment="textStart"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btn_calender"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/maincolor"
        android:drawableLeft="@drawable/baseline_calendar_month_24"
        android:elevation="2dp"
        android:text="Lịch"
        android:textAlignment="textStart"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/maincolor"
        android:drawableLeft="@drawable/baseline_logout_24"
        android:elevation="2dp"
        android:text="Đăng xuất"
        android:textAlignment="textStart"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btn_gopy"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/maincolor"
        android:drawableLeft="@drawable/baseline_chat_24"
        android:elevation="2dp"
        android:text="Góp ý"
        android:textAlignment="textStart"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Các nguồn báo khác"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_nguoiduatin"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:elevation="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/logo_nguoiduatin"
            android:shadowRadius="1"
            app:layout_constraintBottom_toTopOf="@+id/space"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space2" />

        <ImageView
            android:id="@+id/btn_News24h"
            android:layout_width="170dp"
            android:elevation="8dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/logo24h"
            app:layout_constraintBottom_toTopOf="@+id/space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/space2"
            app:layout_constraintVertical_bias="0.375" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:elevation="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/logo_thanhnien"
            android:shadowRadius="1"
            app:layout_constraintBottom_toTopOf="@+id/space"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space2" />

        <ImageView
            android:layout_width="170dp"
            android:elevation="8dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/logo_tuoitre"
            app:layout_constraintBottom_toTopOf="@+id/space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/space2"
            app:layout_constraintVertical_bias="0.375" />
    </LinearLayout>
</LinearLayout>
